<?xml version="1.0" encoding="UTF-8"?>
<resourceList>
	<resources>
		<resource>
			<module>default</module>
			<permissions>
				<allowAll>
					<view />
					<enquire />
				</allowAll>
				<disableAll role="Guest" />
				<enableAll role="Guest" />
			</permissions>
			<resources>
				<resource>
					<controller>product</controller>
					<action>comment</action>
					<permissions>
						<allow role="User">
							<comment />
						</allow>
						<deny role="Guest">
							<enquire />
						</deny>
					</permissions>
				</resource>
			</resources>
		</resource>
		<resource>
			<module>admin</module>
			<resources>
				<resource>
					<controller>index</controller>
					<resources>
						<resource>
							<action>index</action>
						</resource>
					</resources>
				</resource>
			</resources>
		</resource>
		<resource>
			<name>Custom resource</name>
		</resource>
	</resources>
</resourceList>